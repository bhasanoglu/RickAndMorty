<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8B96D1"
    android:backgroundTint="#302E25"
    android:orientation="vertical"
    tools:context=".ui.views.DetailActivity">

    <ImageView
        android:id="@+id/image_view_detail"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/text_view_name_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Name"
        android:textColor="#F9A825"
        android:textSize="50sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_view_status_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textColor="@android:color/white"

        android:text="Status"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/text_view_LastKnown_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="LastKnown"
        android:textColor="#F14F1B"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/text_view_Species_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Species"
        android:textColor="#CC6D4F"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/text_view_Gender_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Gender"
        android:textColor="#AC8F85"
        android:textSize="20sp" />


</LinearLayout>